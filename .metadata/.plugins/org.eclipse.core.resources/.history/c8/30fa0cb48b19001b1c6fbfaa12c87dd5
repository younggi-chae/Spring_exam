	     String[] config = {
	    		 "applicationContext.xml",
	    		 "commonConcern.xml"
	     };
	     
	     ApplicationContext factory =
	    		 new ClassPathXmlApplicationContext(config);
	     
	  /*  Kosta kosta = (Kosta)factory.getBean("kostaService");
	    kosta.insert();*/
	     
	    Service service = (Service)factory.getBean("writeService");
	     service.list();
	}

}
